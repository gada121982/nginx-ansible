server {
    listen {{nginx_port}};
    server_name {{nginx_server_name}};
    root         /usr/share/nginx/html;

    location / {
        index index.html index.htm;
    }

    error_page 404 /404.html;
    location = /404.html {
        internal;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        internal;
    }
}

